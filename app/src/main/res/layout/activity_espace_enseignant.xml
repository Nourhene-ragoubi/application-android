<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"


    tools:context="com.example.cliniqueinformatique.tn.EspaceEnseignant">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Espace Enseignant"
                android:textSize="30dp"
                android:textStyle="bold"
                android:id="@+id/textView6"
                android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal">


    <Button

        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/profil"
        android:paddingTop="5dp"
        android:layout_marginTop="30dp"
        android:id="@+id/btnComportement"
        android:text="Comportement"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"/>



    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/ee"
        android:text="Contact"
        android:layout_marginLeft="25dp"
        android:paddingTop="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/btnContactParent"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal">
    <Button
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle"
        android:drawableTop="@drawable/msgg"
        android:text="Messages"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:layout_marginTop="15dp"
        android:id="@+id/btnMsg"
        android:layout_gravity="center_horizontal" />
            <Button
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_marginLeft="25dp"
                android:background="@drawable/circle"
                android:drawableTop="@drawable/sortie"
                android:paddingTop="20dp"
                android:text="Quitter"
                android:id="@+id/btnQuitter"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />
            </LinearLayout>
</LinearLayout>
</ScrollView>
    </LinearLayout>